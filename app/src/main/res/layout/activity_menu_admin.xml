<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    tools:context=".ventanas.MenuAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/txtInicioAdministrador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bienvenido Administrador"
                android:gravity="center"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/bttnSolicitudes"
                android:padding="16sp"
                android:drawableStart="@drawable/ic_baseline_edit_24"
                android:layout_width="250sp"
                android:layout_height="60sp"
                android:background="@drawable/custom_button"
                android:layout_marginTop="15dp"
                android:text="Solicitudes de Registro" />

            <Button
                android:id="@+id/bttnTickets"
                android:padding="16sp"
                android:drawableStart="@drawable/ic_baseline_report_problem_24"
                android:layout_width="250sp"
                android:layout_height="60sp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:text="Tickets" />

            <Button
                android:id="@+id/bttnBloqueados"
                android:padding="16sp"
                android:drawableStart="@drawable/org_symbol"
                android:layout_width="250sp"
                android:layout_height="60sp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:text="Usuarios Bloqueados" />

            <Button
                android:id="@+id/bttnCerrarSesion"
                android:padding="16sp"
                android:drawableStart="@drawable/ic_baseline_exit_to_app_24"
                android:background="@drawable/custom_button"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Salir" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
