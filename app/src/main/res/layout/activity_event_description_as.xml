<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarjetaEvento"
    tools:context=".ventanas.EventDescriptionAs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5sp"
    android:layout_marginBottom="15sp"
    cardview:cardCornerRadius="16sp"
    app:cardUseCompatPadding="true"
    cardview:cardElevation="5sp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        android:padding="15sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.75">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreEventoDesc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="[TITULO]"
                    android:textSize="40sp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombreOrganizadorDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2sp"
                        android:drawableStart="@drawable/org_symbol"
                        android:padding="16sp"
                        android:text="[ORGANIZADOR]"
                        android:textSize="25sp">

                    </TextView>

                    <TextView
                        android:id="@+id/ubicacionEvento"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2sp"
                        android:drawableStart="@drawable/ic_baseline_location_on_24"
                        android:padding="16sp"
                        android:text="[UBICACION]"
                        android:textSize="25sp">

                    </TextView>

                    <TextView
                        android:id="@+id/fechaEventoDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                        android:padding="16sp"
                        android:text="[FECHA]"
                        android:textSize="25sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15sp">

                    <TextView
                        android:id="@+id/descEventoDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15sp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing
                                     elit. Duis luctus velit viverra elit vehicula gravida."
                        android:textSize="25sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/bttnGuardarFav"
                android:layout_width="290sp"
                android:layout_height="70sp"
                android:background="@drawable/button_menu"
                android:text="@string/guardar_en_favoritos"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_star"
                android:padding="16sp">

            </Button>
            <Button
                android:id="@+id/bttnVolverAsistente"
                android:layout_marginTop="18sp"
                android:layout_width="228sp"
                android:layout_height="60sp"
                android:background="@drawable/button_menu"
                android:text="Volver"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="16sp">

            </Button>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>